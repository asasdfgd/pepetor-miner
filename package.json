{
  "name": "pepetor-miner",
  "version": "2.0.1",
  "description": "Privacy-first distributed mining platform with Tor support, Solana integration, and Chrome extension",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "apps/api",
    "apps/web",
    "apps/chrome-extension",
    "apps/tor-backend",
    "packages/sdk"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:api": "npm run dev -w apps/api",
    "dev:web": "npm run dev -w apps/web",
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run build -w apps/api",
    "build:web": "npm run build -w apps/web",
    "test": "npm test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "install-all": "npm install",
    "start:api": "npm start -w apps/api",
    "start:web": "npm start -w apps/web"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asasdfgd/pepetor-miner.git"
  },
  "keywords": [
    "mining",
    "privacy",
    "tor",
    "solana",
    "cryptocurrency",
    "browser-extension"
  ],
  "author": "Joseph Pietravalle",
  "license": "MIT",
  "dependencies": {
    "mongodb": "^6.20.0"
  }
}
