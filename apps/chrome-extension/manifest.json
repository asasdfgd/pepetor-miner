{
  "manifest_version": 3,
  "name": "PEPETOR Miner",
  "version": "1.0.5",
  "description": "Earn crypto by sharing bandwidth with PEPETOR Tor network",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://pepetor-miner.fly.dev/*",
    "https://pepetor-miner-lexa8yzjp-asasdfgds-projects.vercel.app/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://pepetor-miner-lexa8yzjp-asasdfgds-projects.vercel.app/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PEPETOR Miner",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["images/*", "pages/*", "services/*"],
      "matches": ["*://*/*"]
    }
  ]
}