# Server Configuration
NODE_ENV=development
PORT=3001

# MongoDB Database
MONGODB_URI=mongodb://localhost:27017/pepetor-miner

# JWT Secrets
JWT_SECRET=your_jwt_secret_key_change_this
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_this
JWT_EXPIRY=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# $PEPETOR Token Configuration
PEPETOR_MINT_ADDRESS=
REWARDS_WALLET_PATH=.wallets/rewards-keypair.json
TREASURY_WALLET_PATH=.wallets/treasury-keypair.json

# Transaction Fee Configuration (in percentage)
TRANSACTION_FEE_PERCENT=2
SIMULATION_MODE=false

# Tor Configuration
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051
TOR_LOG_LEVEL=warn
